<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="post">
                    <div class="mb-3">
                        <input type="text" value={{link.title}} class="form-control" placeholder="Title" name="title" autofocus>
                    </div>
                    <div class="mb-3">
                        <input type="url" value={{link.url}} name="url" class="form-control" placeholder="URL">
                    </div>
                    <div class="mb-3">
                        <textarea name="description" id="" rows="2" class="form-control" placeholder="Description">{{link.description}}</textarea>
                    </div>
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button class="btn btn-success" type="submit">Save</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>